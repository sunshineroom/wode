/* pages/league/list.wxss */
.item-view{
    height:238rpx;

    border: solid  1rpx #e0e0e0;
	border-left-width: 0px;
	border-right-width:0px;
    border-top-width: 0px;
}

.item-view image{
    position: absolute;

    width:180rpx;
    height:180rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
}

.logo{
    position: absolute;
    
}

.status{
    position: absolute;
    
    width:180rpx;
    height:30rpx;

    margin-left: 30rpx; 
    margin-top: 180rpx;
    text-align: center;

    background-color:rgba(0,0,0,0.7);
    color: white;
    font-size: 24rpx;
    padding-top: 10rpx;
}

.name{
    position:relative;
    display: block;
    width: 480rpx;
    height: 70rpx;
    margin-left: 240rpx;
    top: 40rpx;
    color: #333;
    font-size: 30rpx;
}

.city{
    position:relative;
    display: block;
    margin-left: 240rpx;
    margin-top: 40rpx;
    color: #808992;
    font-size: 26rpx;
}

.player{
    position:relative;
    display: block;
    margin-left: 240rpx;
    margin-top: 8rpx;
    color: #808992;
    font-size: 26rpx;
}

.time{
    position:relative;
    margin-left: 240rpx;
    margin-top: 8rpx;
    height: 44rpx;
}

.time image{
    position:relative;

    width:30rpx;
    height:30rpx;
    margin-top: 0rpx;
    margin-left:0rpx;
}

.time text{
    position:relative;

    height:20rpx;
    line-height: 20rpx;
    margin-top: -30rpx;
    margin-left:5rpx;
    color: #808992;
    font-size: 26rpx;
}
